<div class='container-fluid'>
  <% if logged_in? %>
    <div id='edit-my-profile'>
        <%= link_to image_tag('models/editmyprofile.png', height: 40), edit_user_path(current_user) %>
    </div>

    <div id='add-new-pitch'>
      <%= link_to image_tag('models/newpitch.png', height: 20), new_pitch_path %>
    </div>

    <div id='about-user'>
      <h1><%= @user.first_name %> <%= @user.middle_name %> <%= @user.last_name %></h1>

      <div class='user-avatar'>
        <%= image_tag @user.avatar.url(:thumb) %>
      </div>
      
      <p><%= @user.about %></p>
    </div>

    <div class='headers'>
      <%= image_tag('nav/mypitches.png', height: 40) %>
    </div>

    <div class='row pitches transitions-enabled centered clearfix masonry'>
      <ul>
        <% @user.pitches.each do |p| %>
          <li class='box panel panel-default'>
            <br>
            <%= link_to (image_tag p.image.url(:small)), p %>
            <div class='panel-body'>
              <%= link_to p.title, p %>
            </div>
          </li>
        <% end %>
      </ul>
    </div>

  <% else %>
    <%= render 'shared/links' %>
  <% end %>
</div>