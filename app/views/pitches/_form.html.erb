<%= form_for @pitch, :html => {:multipart => true} do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  
  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div>
    <%= f.file_field :image %>
  </div>

  <div>
    <%= f.label :user %>
    <%= f.collection_select :user, User.all, :id, :name %>
  </div>

  <div>
    <%= f.submit %>
  </div>
<% end %>
