<div class='container-fluid'>
  <% if logged_in? %>

    <div class='headers'>
      <%= image_tag('nav/allpitches.png', height: 60) %> 
    </div>

    <%= link_to "Add a pitch", new_pitch_path %>
    
  <!-- filter all user pitches by keyword -->
  <div class='form-group'>
    <%= form_tag("/pitches", method: "get") do %>
      <%= text_field_tag(:q) %>
      <%= submit_tag("Filter by Title") %>
    <% end %>
  </div>  

  <!-- display all user pitches -->
  <div class='row pitches transitions-enabled centered clearfix masonry'>
    <ul>
      <div>
        <% @pitches.each do |p| %>
          <li class='box panel panel-default'>
            <%= link_to (image_tag p.image.url(:small)), p %>
            <div class='panel-body'>
              <%= link_to p.title, p %>
            </div>
          </li>
        <% end %>
      </div>
    </ul>

  </div>

  <% else %>  
    <%= render 'shared/links' %>
  <% end %>
</div>


