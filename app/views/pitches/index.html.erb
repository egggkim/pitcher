<h1>All pitches</h1>
<p><%= link_to "Add new pitch", new_pitch_path %></p>
<p><%= link_to "My profile", current_user %></p>

<ul>
  <% @pitches.each do |p| %>
    <li>
      <%= p.title %>
      <br>
      <%= image_tag p.image.url(:small) if p.image.url(:small).present? %>
    </li>
  <% end %>
</ul>

