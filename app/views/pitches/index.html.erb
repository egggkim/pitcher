<% if logged_in? %>
  <h1>All pitches</h1>

  <%= link_to "Add a pitch", new_pitch_path %>
<!-- filter all user pitches by keyword -->
<%= form_tag("/pitches", method: "get") do %>
  <%= text_field_tag(:q) %>
  <%= submit_tag("Filter by Title") %>
<% end %>

<!-- display all user pitches -->
  <ul>
    <% @pitches.each do |p| %>
      <li>
        <%= link_to p.title, p %>
        <br>
        <%= link_to (image_tag p.image.url(:small)), p %>
      </li>
    <% end %>
  </ul>

<% else %>  
  <%= render 'shared/links' %>
<% end %>



