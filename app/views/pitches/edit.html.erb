<% if pitch_owner %>
  <div class='edit-pitch-view'>
    <div class='headers'>
      <%= image_tag('models/editpitch.png', height: 40) %>
    </div>
    <hr>
    <div class="form-group">
      <%= bootstrap_form_for @pitch, :html => {:multipart => true} do |f| %>
          <%= f.text_field :title, label: "Title:" %>
          <%= f.text_area :description, label: "Description: " %>
          <%= f.file_field :image, label: "Update your thumbnail:" %>

          <%= f.submit "Update Pitch", :id => "submit" %>
      <% end %>
    </div>
  </div>

<% else %>
  <%= render 'shared/error' %>
<% end %>