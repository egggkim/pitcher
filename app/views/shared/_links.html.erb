<div class='container-fluid' id='welcome'>
  <div class='text-center'>
    <h1 id='welcome'>Welcome to</h1>
    <%= image_tag 'logos/pitchr-welcome.png', width: '200px', class: 'img-responsive center-block' %>
    <p id='tagline'>Discover your next big hit</p>
  </div>
</div>

<div id='welcome-links'>
  <div class='row users'>

    <div class='login'>
      <p>Already a member?</p>
      <%= link_to login_path do %>
        <%= image_tag 'welcome/login.png', height: 35 %> 
      <% end %>
    </div>

    <div class='signup'>
      <p>Not a user yet?</p>
      <%= link_to new_user_path do %>
        <%= image_tag 'welcome/signup.png', height: 35 %> 
      <% end %>
    </div>

  </div>
</div>