<div class='login-view'>
  <div class='headers'>
    <%= image_tag 'welcome/login.png', height: 60 %>
  </div>
  
  <hr>
  <!-- flash class currently has no styling 12/13/14 -->
  <div class='flash'>
    <!-- is this proper syntax for flash[:notice] view? -->
    <% if flash[:notice] %>
      <%= flash[:notice] %>
    <% end %>
  </div>

  <%= bootstrap_form_for :login do |f| %>
    <%= f.email_field :email %>
    <%= f.password_field :password %>

    <%= f.submit 'Log in' %>
  <% end %>

</div>