<div class='container-fluid login-view'>
  <div class='headers'>
    <%= image_tag 'welcome/login.png', height: 50 %>
  </div>
  
  <!-- flash class currently has no styling 12/13/14 -->
  <div class='flash'>
    <% if flash[:notice] %>
      <%= flash[:notice] %>
    <% end %>
  </div>

  <div class='form-group'>
    <%= bootstrap_form_for :login do |f| %>
      <%= f.email_field :email %>
      <%= f.password_field :password %>

      <%= f.submit 'Log in' %>
    <% end %>
  </div>
</div>